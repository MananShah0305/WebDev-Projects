extends base.pug
block scripts 
    script(src='../static/index.js')

block style 
    style 
        include ../static/style.css
        include ../static/styleform.css
block content
    div.form
        h1 Contact Us
        form(action="/contact" method="post")
            input(type="text" class="input" name="name" placeholder='Enter your name')
            input(type="number" class="input" name="phone number" placeholder='Enter your phone number')
            input(type="email" class="input" name="email" placeholder='Enter your email')
            input(type="text" class="input" name="desc" placeholder='Enter your comments')
            button.btn Submit